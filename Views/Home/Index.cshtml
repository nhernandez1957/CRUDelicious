@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
    <h5 class="mt-3 display-8">Check Out Some Recent Dishes</h5>
    <table class="mt-3 table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Dish Name</th>
                <th scope="col">Chef's Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var l in ViewBag.AllDishes)
                {
                    <tr>
                        <td><a href="dishes/view/@l.DishID">@l.DishName</a></td>
                        <td>@l.ChefName</td>
                    </tr>
                }
        </tbody>
    </table>
</div>

<a href="/dishes/add" class="btn btn-success">Add Dish</a>